// Visibilidad

// Visibilidad desde size
for size, screen-size in breakpoints
  @media screen and (max-width: screen-size - 1)
    .desde-{size}
      display none !important

// Visibilidad hasta $size
for size, screen-size in breakpoints
  @media screen and (min-width: screen-size)
    .hasta-{size}
      display none !important